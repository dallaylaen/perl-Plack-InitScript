#!/usr/bin/perl -w

use strict;
use Plack::InitScript;
use Getopt::Long;
use Carp;

my $config = '/etc/plack/config.yml';

GetOptions (
	"config=s" => \$config,
) or die "Bad options";

my ($action, @svc) = @ARGV;

$SIG{__DIE__} = \&Carp::confess;

my $plis = Plack::InitScript->new( relaxed => 1 );
$plis->load_config( $config );
$plis->load_apps;

$plis->service( $action, @svc );


